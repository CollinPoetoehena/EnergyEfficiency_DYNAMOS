UserKnownHostsFile /dev/null
StrictHostKeyChecking no
ServerAliveInterval 120

# Bastion host config
Host bastion.fabric-testbed.net
    User collinpoetoehena_0000217992
    ForwardAgent yes
    IdentityFile ~/.ssh/fabric_bastion_key
    IdentitiesOnly yes

# IdentiftyFile here is the key for actual node access
# Match all remote nodes explicitly (you can also use for example Host 2001:* if you want to match by IP)
# Using "* !bastion.fabric-testbed.net" is not supported by ansible ssh for now, so use the hosts explicitely
# TODO: that still correct?
Host * !bastion.fabric-testbed.net
    ProxyJump collinpoetoehena_0000217992@bastion.fabric-testbed.net:22

