# Bastion host config
Host bastion.fabric-testbed.net
    User collinpoetoehena_0000217992
    ForwardAgent yes
    IdentityFile ~/.ssh/fabric_bastion_key
    IdentitiesOnly yes

# All other hosts EXCEPT the bastion 
# IdentiftyFile here is the key for actual node access
Host * !bastion.fabric-testbed.net
    ProxyJump collinpoetoehena_0000217992@bastion.fabric-testbed.net:22
    IdentityFile ~/.ssh/slice_key
    IdentitiesOnly yes
    User ubuntu

